server {
    listen 80;
    server_name *.symfony.dev.mediacthq.nl;

    include "upstream/php7";
    include "content/symfony";
}

server {
    listen 443;
    server_name *.symfony.dev.mediacthq.nl;

    ssl on;
    ssl_certificate certs/server.crt;
    ssl_certificate_key certs/server.key;

    include "upstream/php7";
    include "content/symfony";
}

